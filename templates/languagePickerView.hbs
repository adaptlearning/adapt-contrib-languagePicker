{{#if backgroundImage}}
<div class="background" aria-hidden="true" style="{{#if backgroundImage}}background-image: url('{{backgroundImage}}');{{/if}}">
</div>
{{/if}}

<div class="languagepicker__inner">

  {{#if _graphic.src}}
  <div class="languagepicker__image-container"{{#unless _graphic.alt}} aria-hidden="true"{{/unless}}>
    <img class="languagepicker__image" src={{_graphic.src}} alt={{_graphic.alt}} />
  </div>
  {{/if}}

  {{#if displayTitle}}
  <div class="languagepicker__title">
    <div class="languagepicker__title-inner" role="heading" aria-level="1">
      {{{compile displayTitle}}}
    </div>
  </div>
  {{/if}}

  {{#if body}}
  <div class="languagepicker__body">
    <div class="languagepicker__body-inner">
      {{{compile body}}}
    </div>
  </div>
  {{/if}}

  <div class="languagepicker__languages">
    <div class="languagepicker__languages-inner">

      {{#each _languages}}
      <button class="btn-text languagepicker__language-btn is-{{_language}} js-languagepicker-btn-click{{#if _isDisabled}} is-disabled{{/if}}" value="{{_language}}"{{#if _isDisabled}} aria-disabled="true" tabindex="-1"{{/if}} lang="{{_language}}">
        {{{compile displayName}}}
      </button>
      {{/each}}

    </div>
  </div>

</div>
